{
  "info": {
    "name": "Spring Boot File Storage Microservice",
    "description": "Postman collection for file sharing, download, and actuator endpoints.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set('jwt_token', jsonData.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json", "type": "text" },
              { "key": "X-Correlation-ID", "value": "{{correlationId}}", "type": "text" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\",\n  \"role\": \"USER\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Share Folder",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{jwt_token}}", "type": "text" },
          { "key": "X-Correlation-ID", "value": "{{correlationId}}", "type": "text" },
          { "key": "Content-Type", "value": "application/json", "type": "text" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"folderpath\": \"/user/docs\",\n  \"emails\": [\"user1@example.com\", \"user2@example.com\"]\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/v1/storage/share",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "storage", "share"]
        }
      }
    },
    {
      "name": "Download Folder",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{jwt_token}}", "type": "text" },
          { "key": "X-Correlation-ID", "value": "{{correlationId}}", "type": "text" }
        ],
        "url": {
          "raw": "{{base_url}}/api/v1/storage/download?folderpath=/user/docs",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "storage", "download"],
          "query": [
            { "key": "folderpath", "value": "/user/docs" }
          ]
        }
      }
    },
    {
      "name": "Actuator Shutdown (ADMIN only)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{jwt_token}}", "type": "text" },
          { "key": "X-Correlation-ID", "value": "{{correlationId}}", "type": "text" }
        ],
        "url": {
          "raw": "{{base_url}}/api/actuator/shutdown",
          "host": ["{{base_url}}"],
          "path": ["api", "actuator", "shutdown"]
        }
      }
    }
  ],
  "variable": [
    { "key": "correlationId", "value": "123e4567-e89b-12d3-a456-426614174000" },
    { "key": "base_url", "value": "http://localhost:8080" }
  ]
}
